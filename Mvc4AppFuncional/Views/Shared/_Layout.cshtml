<!DOCTYPE html>
<html lang="en">
     
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />    
        <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1.0" />
         @*@Styles.Render("~/Content/bootstrap.css")*@
        @Styles.Render("~/Content/themes/base/css")
       @* @Styles.Render("~/Content/bootstrap.min.css")*@
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    
    <body class ="container">
         
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("logotipo ", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Cotizaciones", "Index", "Cotizaciones")</li>
                            <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                            <li>@Html.ActionLink("Nuestros Clientes", "Index", "Cliente")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Alta Productos", "Index","Bodegas")</li>
                            <li>@Html.ActionLink("Catalogo Productos","ListaProductos","Bodegas")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">            
            @RenderSection("featured", required: false)
                    
            <section class="content-wrapper main-content clear-fix">              
                  @Scripts.Render("~/bundles/jquery")                         
                    @RenderBody()  
                                                   
            </section>
              
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>
        
      @*  @Scripts.Render("~/bundles/jquery")*@
        @RenderSection("scripts", required: false)
        @Scripts.Render("~/Scripts/bootstrap.js")
        @Scripts.Render("~/Scripts/bootstrap.min.js")      
    
    </body>

</html>
