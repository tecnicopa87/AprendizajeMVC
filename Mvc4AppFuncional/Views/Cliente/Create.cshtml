@model Mvc4AppFuncional.Models.Clientes

@{
    ViewBag.Title = "Nuevo Cliente";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Cliente</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.NoCliente)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NoCliente)
            @Html.ValidationMessageFor(model => model.NoCliente,"*", new { @class = "text-danger" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NombreCliente)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NombreCliente)
            @Html.ValidationMessageFor(model => model.NombreCliente, "*", new { @class = "text-danger" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GiroEmpresarial)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.GiroEmpresarial)
            @Html.ValidationMessageFor(model => model.GiroEmpresarial)
        </div>
        <br />
        <label>Ejemplo control helper:</label>
        @Html.TextBox("Gerente","Nancy")&nbsp;&nbsp;@Html.DropDownList("Sexo", new MultiSelectList(new [] {"Hombre","Mujer"}))
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
